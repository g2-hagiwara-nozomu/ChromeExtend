{
    "name": "AutoWindowCloser",
    "version": "1.1.0",
    "manifest_version": 2,
    "description": "When you open a specific page, it will be closed automatically.",
    "content_scripts": [
        {
            "matches": [
                "https://*/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": {
            "16": "images/icon16.png",
            "24": "images/icon24.png",
            "32": "images/icon32.png"
        },
        "default_title": "AutoWindowCloser",
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage",
        "tabs"
      ]
}